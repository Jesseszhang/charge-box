/* record.wxss */
.time-icon{
  width: 20rpx;
  height: 20rpx;
  margin-bottom: 4rpx;
  vertical-align: middle;
}
.charging-red{
  color: #e65454 !important;
  font-weight: bold;
}
.start-time{
  font-size: 32rpx;
  color: #333;
  font-weight: 800;
  margin-left: 20rpx;
  vertical-align: middle;
}
.nomore, .loading{
  width: 100%;
  font-size: 24rpx;
  padding: 0rpx 0 20rpx 0;
  text-align: center;
  color: #666;
}
.nodata{
  width: 100%;
  height: 100%;
  position: relative;
  text-align: center;
}
.nodata image {
  width: 190rpx;
  height: 190rpx;
  display: block;
  margin: 0 auto;
  margin-top: 360rpx;
}
.nodata text{
  display: block;
  margin: 0 auto;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}
.equipment-code{
  margin-top: 10rpx;
}
.equipment-code,.charge-time{
  margin-left: 38rpx;
  font-size: 28rpx;
  color: #333;
}
.item-wrap{
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  position: relative;
}
.status-wrap{
  width: 150rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  padding: 20rpx 0;
  transform: translateY(-50%);
  right: 0rpx;
}
.status-wrap::after{
  content: '';
  position: absolute;
  background: #e5e5e5;
  width: 1px;
  height: 100%;
  left: 0;
  top: 0;
  bottom: 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}
.amount{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.status{
  font-size: 24rpx;
  color: #333;
  margin-top: 5rpx;
}