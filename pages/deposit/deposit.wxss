.container{
  width: 100%;
  height: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.deposit-tip{
  padding: 30rpx;
  text-align: right;
}
.deposit-text{
  font-size: 24rpx;
  color: #999;
  padding-bottom: 2rpx;
}
.deposit-text.scale-1px-bottom::after{
  background: #999;
}
.deposit-icon{
  display: block;
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}
.deposit-need{
  width: 100%;
  text-align: center;
  color: #666;
  font-size: 26rpx;
  margin-top: 20rpx;
}
.deposit-num{
  width: 100%;
  text-align: center;
  color: #333;
  font-weight: bold;
  font-size: 90rpx;
}
.deposit-num .num{
  margin-left: 10rpx;
}
.deposit-wrod{
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin-top: 30rpx;
}
.pay-btn-wrap{
  width: 100%;
  margin-top: 160rpx;
  text-align: center;
}
.pay-text{
  font-size: 32rpx;
  color: #fff;
}
.pay-btn{
  margin: 0 auto;
  position: relative;
  width: 590rpx;
  height: 90rpx;
  color: #fff;
  line-height: 90rpx;
  border-radius: 100rpx;
  text-align: center;
  background-image: linear-gradient(-180deg, #E65454 40%, #eb5e43 100%);
  box-shadow:0 10rpx 40rpx rgba(247, 107, 28, .2); 
}
.pay-btn:active{
  background-image: linear-gradient(-180deg, #d64f4f 40%, #eb5e43 100%);
}

.return-deposit{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 80rpx;
  color: #E65454;
  font-size: 32rpx;
  z-index: 9;
}
.btn-submit{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 80rpx;
  color: #E65454;
  font-size: 32rpx;
  z-index: 9;
}
.btn-submit button {
  font-size: 32rpx;
  border: none;
  margin: 0 auto;
  position: relative;
  color: #E65454;
  text-align: center;
  background: transparent;
}
.btn-submit button:active{
  color: #E65454 !important;
  background: transparent;
}