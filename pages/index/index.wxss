/* pages/index/index.wxss */
.container{
  width: 100%;
  height: 100%;
  display: inline-block;
  position: relative;
}
.step-swpier-wrap{
  display: block;
  width: 660rpx;
  height: 760rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 8rpx;
  background:transparent;
  overflow: hidden;
  -webkit-box-shadow:0 0 20px #c0c0c0;  
  -moz-box-shadow:0 0 20px #c0c0c0;  
  box-shadow:0 0 20px #c0c0c0; 
}
.step-swpier-wrap swiper-item {
  border-radius: 8rpx;
  overflow: hidden;
}
.my-wrap{
  position: fixed;
  left: 0;
  width: 112rpx;
  height: 86rpx;
  bottom: 50rpx;
  z-index: 9;
}
.my{
  width: 100%;
  height: 100%;
}
.step-swpier{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  background:transparent;
  overflow: hidden;
}
.slide-image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  background:transparent;
  overflow: hidden;
}
.scan-btn-wrap{
  width: 100%;
  margin-top: 100rpx;
  text-align: center;
}
.scan-btn{
  margin: 0 auto;
  position: relative;
  width: 620rpx;
  height: 120rpx;
  color: #fff;
  line-height: 120rpx;
  border-radius: 100rpx;
  text-align: center;
  background-image: linear-gradient(-180deg, #E65454 40%, #eb5e43 100%);
  box-shadow:0 10rpx 40rpx rgba(247, 107, 28, .2); 
}
.pay-text{
  color: #fff;
  font-weight: bold;
  font-size: 44rpx;
}
.scan-btn:active{
  background-image: linear-gradient(-180deg, #d64f4f 40%, #e45658 100%);
}
.enter-oode{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  margin-top:50rpx;
}
.code-name{
  padding-bottom: 4rpx;
}
.code-name.scale-1px-bottom::after{
  background: #999;
}
.code-name:active{
  background: #c0c0c0;
}
.scan-text{
  display: block;
  font-size: 44rpx;
  color: #fff;
}

.mask{
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: 0 auto;
  z-index: 10;
  background: #000;
}
.user-wrap{
  position: absolute;
  top: 0;
  left: -700rpx;
  width: 500rpx;
  height: 100%;
  z-index: 20;
  background: #fff;
}
.user{
  padding: 40rpx 30rpx;
}
.user .user-img{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.user .user-name{
  vertical-align: middle;
  font-size: 32rpx;
  color: #333;
  margin-left: 20rpx;
}
.options{
  padding: 30rpx;
  position: relative;
}
.options .charge-icon{
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 22rpx;
  height: 19rpx;
  vertical-align: middle;
}
.options .use-icon{
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}
.options .deposit-icon{
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 22rpx;
  height: 26rpx;
  vertical-align: middle;
}

.options .to-icon{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 26rpx;
  vertical-align: middle;
}
.options .li-text{
  color: #333;
  font-size: 32rpx;
  margin-left: 40rpx;
}
.dot-wrap{
  width: 100%;
  height: 10rpx;
  text-align: center;
  margin-top: 10rpx;
}
.dot-wrap .dot{
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #d6d6d6;
  margin: 0 8rpx;
}
.dot-wrap .dot.active{
  width: 50rpx !important;
   border-radius: 16rpx !important;
}

/*modal 重写*/
.modal-mask{
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 0;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 auto;
  background: rgba(0, 0, 0, 0.4);
  z-index: 99;
}
.modal-wrap{
  position: absolute;
  left: 50%;
  top: 35%;
  transform: translate(-50%,-50%);
  width: 560rpx;
  height: 400rpx;
  border-radius: 6rpx;
  background: #fff;
  overflow: hidden;
  z-index: 100;
}
.modal-tip{
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-top: 55rpx;
}
.modal-content .modal-title{
  width: 100%;
  font-size: 28rpx;
  color: #333333;
  text-align:center;
  margin-top: 10rpx;
}
.code-input{
  width: 380rpx;
  height: 80rpx;
  line-height: 90rpx;
  margin: 0 auto;
  text-align: center;
  margin-top: 30rpx;
  color: #333;
  font-size: 46rpx;
  letter-spacing: 18rpx;
  font-weight: bold;
}
.modal-footer{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  position: fixed;
  bottom: 0;
  overflow: hidden;
}
.flex-wrp-center{
  display: flex;
}
.flex-item-justify{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cancle .comfirm{
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 6rpx;
  color: #333;
  font-size: 32rpx;
  overflow: hidden;
}
.comfirm{
  font-weight: bold;
  color: #ccc;
  position: relative;
}
.comfirm::after{
  content: '';
  position: absolute;
  background: #e5e5e5;
  width: 1px;
  height: 90rpx;
  left: 0;
  top: 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}
.cancle:active{
  background: #f0f0f0;
}
.comfirm.active:active{
  background: #f0f0f0;
}
.comfirm.active{
  color: #E65454 !important;
}