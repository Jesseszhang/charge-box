.charging-wrap{
  width: 660rpx;
  height: 760rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 5px;
  overflow: hidden;
  background: #fff;
  -webkit-box-shadow:0 0 20px #c0c0c0;  
  -moz-box-shadow:0 0 20px #c0c0c0;  
  box-shadow:0 0 20px #c0c0c0; 
}
.finish-btn-wrap{
  width: 100%;
  height: 240rpx;
  margin-top: 100rpx;
  position: relative;
}
.charging-text{
  width:150rpx;
  height: 35rpx;
  font-size: 20rpx;
  color: #e5e5e5;
  margin: 0 auto;
  margin-top: 60rpx;
  text-align: center;
  line-height: 35rpx;
  position: relative;
}
.charging-text::after{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid #d6d6d6;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 200%;
  height: 200%;
  border-radius: 100rpx;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: left top;
  transform-origin: left top;
}
  
.charging-time-text{
  width: 100%;
  height: 40rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  font-size: 40rpx;
  margin-top: 48rpx;
  position: relative;
}
.bar{
  position: absolute;
  width: 150rpx;
  height: 4rpx;
  top: 50%;
}
.bar-text{
  position: absolute;
  width: 160rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  color: #333;
}
.left-bar{
  left: 45rpx;
}
.right-bar{
  right: 45rpx;
}
.charge-info{
  margin: 0 auto;
  width: 570rpx;
}
.total-fee{
  font-size: 32rpx;
  margin-top: 40rpx;
}
.total-fee .view{
  font-weight: 800;
  color: #333;
}
.equimnet, .start-time{
  font-size: 32rpx;
}
.equimnet .view, .start-time .view{
  color: #151515;
}
.timer-wrap{
  width: 570rpx;
  height: 150rpx;
  text-align: center;
  padding-bottom: 100rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}
.flex-wrp{
  display:flex;
}
.flex-item{
  display: flex;
  justify-content: center;
  align-items: center;
}
.no-margin{
  margin-right: 0!important;
}
.flex-wrp-center{
  display: flex;
  -webkit-box-pack:justify;
  -webkit-justify-content:space-between;
  -ms-flex-pack:justify;
  justify-content:space-between;
}
.flex-item-justify{
   display: flex;
}
.dot{
  width: 15rpx;
  height: 150rpx;
  font-size: 60rpx;
  text-align: center;
  line-height: 150rpx;
  color: #333;
  margin-right: 0!important;
}
.timer{
  width: 512rpx;
  margin: 0 auto;
}
.timer-wrap .li{
  width: 75rpx;
  height: 150rpx;
  color: #333;
  margin-right: 15rpx;
  font-size: 80rpx;
  border-radius: 8rpx;
  font-weight: bold;
  line-height: 150rpx;
  background: #f5f5f5;
}
.finish-btn{
  margin: 0 auto;
  position: relative;
  width: 240rpx;
  height: 240rpx;
  line-height: 240rpx;
  border-radius: 50%;
  text-align: center;
  background-image: linear-gradient(-180deg, #e45658 40%, #eb5e43 100%);
  box-shadow:0 10rpx 40rpx rgba(247, 107, 28, .2); 
}
.finish-btn:active{
  background-image: linear-gradient(-180deg, #d64f4f 40%, #F76B1C 100%);
}
.finish-text-border{
  width: 204rpx;
  height: 204rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -108rpx;
  margin-top: -108rpx;
  border-radius: 50%;
  border: 3px solid #f4babb;
}
.finish-text-wrap{
  margin-top: 55rpx;
}
.finish-text{
  height: 55rpx;
  line-height: 55rpx;
  display: block;
  font-size: 44rpx;
  color: #fff;
}
.my-wrap{
  position: fixed;
  left: 0;
  width: 112rpx;
  height: 86rpx;
  bottom: 50rpx;
  z-index: 9;
}
.my{
  width: 100%;
  height: 100%;
}
.mask{
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: 0 auto;
  z-index: 10;
  background: #000;
}
.user-wrap{
  position: absolute;
  top: 0;
  left: -700rpx;
  width: 500rpx;
  height: 100%;
  z-index: 20;
  background: #fff;
}
.user{
  padding: 40rpx 30rpx;
}
.user .user-img{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.user .user-name{
  vertical-align: middle;
  font-size: 32rpx;
  color: #333;
  margin-left: 20rpx;
}
.options{
  padding: 30rpx;
  position: relative;
}
.options .charge-icon{
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 22rpx;
  height: 19rpx;
  vertical-align: middle;
}
.options .use-icon{
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}
.options .deposit-icon{
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 22rpx;
  height: 26rpx;
  vertical-align: middle;
}

.options .to-icon{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 26rpx;
  vertical-align: middle;
}
.options .li-text{
  color: #333;
  font-size: 32rpx;
  margin-left: 40rpx;
}
