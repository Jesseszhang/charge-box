/* payment.wxss */
.container{
  display: inline-block;
  width: 100%;
  height: 100%;
  background: #fff;
}
.payment-wrap{
  width: 100%;
  text-align: center;
  margin-top: 80rpx;
}
.money-icon{
  display:inline-block;
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}
.payment-text{
  display:inline-block;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  vertical-align: middle;
  margin-left: 6rpx;

}
.payment-money{
  width: 100%;
  text-align: center;
  font-size: 80rpx;
  color: #333;
  font-weight: bold;
}
.charged-time{
  display: block;
  width: 590rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin: 0 auto;
  margin-top: 20rpx;
  padding-bottom: 80rpx;
}
.pre-money{
  display: block;
  margin: 0 auto;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 100rpx;
  font-weight: 800;
  color: #333;
}
.back-money{
  display: block;
  margin: 10rpx auto;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}
.payment-info{
  margin: 0 auto;
  width: 590rpx;
  padding: 40rpx 0;
}
.payment-info .view{
  font-size: 32rpx;
  color: #333;
}
.flex-wrp-center{
  display: flex;
  -webkit-box-pack:justify;
  -webkit-justify-content:space-between;
  -ms-flex-pack:justify;
  justify-content:space-between;
  vertical-align: middle;
}
.flex-item-justify{
   display: flex;
   vertical-align: middle;
}
.btn-submit{
  width: 590rpx;
  height: 90rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%,-50%);
  bottom: 100rpx;
  border-radius: 100rpx;
  text-align: center;
  z-index: 99;
}
.btn-submit button {
  font-size: 32rpx;
  border: none;
  margin: 0 auto;
  position: relative;
  width: 590rpx;
  height: 90rpx;
  color: #fff;
  line-height: 90rpx;
  border-radius: 100rpx;
  text-align: center;
  background-image: linear-gradient(-180deg, #e45658 40%, #eb5e43 100%);
  box-shadow:0 10rpx 40rpx rgba(247, 107, 28, .2); 
}
.btn-submit button:active{
  color: #fff !important;
  background: transparent;
  background-image: linear-gradient(-180deg, #d64f4f 40%, #eb5e43 100%);
}